@{
    ViewData["Title"] = "Yönetici Paneli";

    // Controller'dan gelen verileri kutudan çıkarıyoruz
    var trainers = ViewBag.PendingTrainers as List<ProjeOdeviWeb_G231210048.Models.AppUser>;
    var appointments = ViewBag.PendingAppointments as List<ProjeOdeviWeb_G231210048.Models.Appointment>;

    // YENİ EKLENEN: Grup Seansları
    var sessions = ViewBag.PendingSessions as List<ProjeOdeviWeb_G231210048.Models.Session>;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-circle-exclamation"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex align-items-center justify-content-center mb-4">
        <h1 class="text-center mb-0"><i class="fa-solid fa-shield-halved text-primary"></i> Yönetici Paneli</h1>
    </div>

    <div class="row">
        <div class="col-md-7">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="m-0"><i class="fa-solid fa-user-clock"></i> Antrenör Başvuruları</h5>
                    <span class="badge bg-light text-dark">@(trainers?.Count ?? 0) Bekleyen</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">İsim</th>
                                    <th>Email</th>
                                    <th class="text-end pe-3">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (trainers != null && trainers.Count > 0)
                                {
                                    @foreach (var item in trainers)
                                    {
                                        <tr>
                                            <td class="ps-3 fw-bold">@item.FullName</td>
                                            <td>@item.Email</td>
                                            <td class="text-end pe-3">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detayları İncele">
                                                        <i class="fa-solid fa-eye"></i> İncele
                                                    </a>
                                                    <form asp-action="ApproveUser" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-sm btn-success" title="Direkt Onayla" onclick="return confirm('Detaylara bakmadan onaylamak istiyor musunuz?')">
                                                            <i class="fa-solid fa-check"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">
                                            <i class="fa-solid fa-check-circle fa-2x mb-2 text-success"></i>
                                            <p class="mb-0">Bekleyen antrenör başvurusu yok.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h5 class="m-0"><i class="fa-solid fa-calendar-check"></i> Randevu Onayları</h5>
                    <span class="badge bg-dark text-white">@(appointments?.Count ?? 0) Bekleyen</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">Tarih</th>
                                    <th>Üye</th>
                                    <th class="text-end pe-3">İşlem</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (appointments != null && appointments.Count > 0)
                                {
                                    @foreach (var item in appointments)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <span class="fw-bold">@item.Date.ToString("dd.MM")</span>
                                                <small class="text-muted d-block">@item.Time.ToString(@"hh\:mm")</small>
                                            </td>
                                            <td>@item.AppUser?.FullName</td>
                                            <td class="text-end pe-3">
                                                <div class="btn-group">
                                                    <form asp-action="ApproveAppointment" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-success btn-sm" title="Onayla">
                                                            <i class="fa-solid fa-check"></i>
                                                        </button>
                                                    </form>
                                                    <form asp-action="CancelAppointment" method="post" class="ms-1">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button type="submit" class="btn btn-danger btn-sm" title="Reddet">
                                                            <i class="fa-solid fa-xmark"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="3" class="text-center py-4 text-muted">
                                            <i class="fa-regular fa-calendar-check fa-2x mb-2"></i>
                                            <p class="mb-0">Onay bekleyen randevu yok.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow border-0 mb-5">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="m-0"><i class="fa-solid fa-users-rectangle"></i> Grup Dersi (Seans) Onayları</h5>
                    <span class="badge bg-light text-primary fw-bold">@(sessions?.Count ?? 0) Bekleyen</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-3">Antrenör</th>
                                    <th>Ders Adı</th>
                                    <th>Tarih & Saat</th>
                                    <th>Detaylar</th>
                                    <th class="text-end pe-3">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (sessions != null && sessions.Count > 0)
                                {
                                    @foreach (var item in sessions)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <span class="fw-bold">@item.Trainer?.FullName</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-info text-dark">@item.ClassName</span>
                                            </td>
                                            <td>
                                                <i class="fa-regular fa-calendar"></i> @item.SessionDate.ToString("dd.MM.yyyy") <br />
                                                <i class="fa-regular fa-clock"></i> @item.SessionDate.ToString("HH:mm")
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    Süre: @item.Duration dk <br />
                                                    Ücret: @item.Price ₺ <br />
                                                    Kontenjan: @item.Quota Kişi
                                                </small>
                                            </td>
                                            <td class="text-end pe-3">
                                                <div class="d-flex justify-content-end gap-2">
                                                    <form asp-action="ApproveSession" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="decision" value="true" />
                                                        <button type="submit" class="btn btn-success btn-sm">
                                                            <i class="fa-solid fa-check"></i> Onayla
                                                        </button>
                                                    </form>

                                                    <form asp-action="ApproveSession" method="post">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <input type="hidden" name="decision" value="false" />
                                                        <button type="submit" class="btn btn-danger btn-sm">
                                                            <i class="fa-solid fa-xmark"></i> Reddet
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="fa-solid fa-clipboard-check fa-3x mb-3 text-primary"></i>
                                            <h5>Bekleyen Grup Dersi Yok</h5>
                                            <p class="mb-0">Tüm seanslar onaylandı veya reddedildi.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>