@model ProjeOdeviWeb_G231210048.Models.ViewModels.TrainerDetailsViewModel

@{
    ViewData["Title"] = "Başvuru Detayı";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fa-solid fa-address-card"></i> Başvuru Detayı</h4>
                    <span class="badge @(Model.IsApproved ? "bg-success" : "bg-warning text-dark")">
                        @(Model.IsApproved ? "Onaylı" : "Onay Bekliyor")
                    </span>
                </div>
                <div class="card-body p-4">

                    <div class="row mb-4">
                        <div class="col-md-4 text-center border-end">
                            <i class="fa-solid fa-user-tie fa-6x text-secondary mb-3"></i>
                            <h5 class="fw-bold">@Model.FullName</h5>
                            <p class="text-muted">@Model.Email</p>
                        </div>

                        <div class="col-md-8 ps-4">
                            <h5 class="text-primary border-bottom pb-2">Eğitmen Bilgileri</h5>

                            <div class="row mb-2">
                                <div class="col-4 fw-bold text-muted">Uzmanlık:</div>
                                <div class="col-8"><span class="badge bg-info text-dark">@Model.Specialization</span></div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-4 fw-bold text-muted">Çalışma Saatleri:</div>
                                <div class="col-8">@Model.WorkingHours</div>
                            </div>

                            <div class="row mb-2">
                                <div class="col-4 fw-bold text-muted">İzin Günleri:</div>
                                <div class="col-8">
                                    @if (!string.IsNullOrEmpty(Model.DaysOff))
                                    {
                                        foreach (var day in Model.DaysOff.Split(','))
                                        {
                                            <span class="badge bg-danger me-1">@day</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">İzin günü yok</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light border d-flex align-items-center" role="alert">
                        <i class="fa-solid fa-circle-info text-primary me-2"></i>
                        <div>
                            Bu eğitmeni onayladığınızda sisteme giriş yapabilecek ve üyeler randevu alabilecektir.
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left"></i> Listeye Dön
                        </a>

                        @if (!Model.IsApproved)
                        {
                            <form asp-action="ApproveUser" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@Model.UserId" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fa-solid fa-check"></i> Başvuruyu Onayla
                                </button>
                            </form>

                            <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Bu başvuruyu tamamen silmek istediğinize emin misiniz?');">
                                <input type="hidden" name="id" value="@Model.UserId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fa-solid fa-trash"></i> Reddet ve Sil
                                </button>
                            </form>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>