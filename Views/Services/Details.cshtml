@using System.Security.Claims
@model List<ProjeOdeviWeb_G231210048.Models.Session>

@{
    ViewData["Title"] = ViewBag.ServiceName + " Dersleri";
    // Controller'dan gelen Eğitmen listesini alıyoruz
    var trainers = ViewBag.AvailableTrainers as List<ProjeOdeviWeb_G231210048.Models.Trainer>;
}

<div class="container mt-5">

    <div class="d-flex align-items-center mb-4 border-bottom pb-3">
        <a asp-action="Index" class="btn btn-outline-secondary me-3 rounded-circle" style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center;">
            <i class="fa-solid fa-arrow-left"></i>
        </a>
        <div>
            <h2 class="fw-bold m-0 text-dark">@ViewBag.ServiceName</h2>
            <small class="text-muted">Bu hizmet için grup derslerine katılabilir veya bireysel randevu alabilirsiniz.</small>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success"><i class="fa-solid fa-check-circle"></i> @TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger"><i class="fa-solid fa-circle-exclamation"></i> @TempData["Error"]</div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning"><i class="fa-solid fa-triangle-exclamation"></i> @TempData["Warning"]</div>
    }

    <div class="mb-5">
        <h3 class="fw-bold text-primary mb-3"><i class="fa-solid fa-users"></i> Aktif Grup Seansları</h3>

        @if (Model.Count == 0)
        {
            <div class="alert alert-light border border-dashed text-center text-muted">
                Şu an @ViewBag.ServiceName için açılmış aktif bir grup dersi bulunmuyor.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm border-0">
                            <div class="card-header bg-dark text-white text-center py-2">
                                <h6 class="m-0">@item.ClassName</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-1"><i class="fa-solid fa-user-tie text-primary me-2"></i> @item.Trainer.FullName</p>
                                <p class="mb-1"><i class="fa-regular fa-calendar text-warning me-2"></i> @item.SessionDate.ToString("dd MMM HH:mm")</p>
                                <p class="mb-1"><i class="fa-solid fa-tag text-success me-2"></i> @item.Price ₺</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="badge @(item.CurrentCount >= item.Quota ? "bg-danger" : "bg-info")">
                                        Kontenjan: @item.CurrentCount / @item.Quota
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-0">
                                @if (item.CurrentCount >= item.Quota)
                                {
                                    <button class="btn btn-secondary w-100 btn-sm" disabled>Dolu</button>
                                }
                                else if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-action="JoinSession" method="post">
                                        <input type="hidden" name="sessionId" value="@item.Id" />
                                        <button type="submit" class="btn btn-outline-primary w-100 btn-sm">Katıl</button>
                                    </form>
                                }
                                else
                                {
                                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-dark w-100 btn-sm">Giriş Yap</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <div class="mb-5 pt-4 border-top">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold text-success"><i class="fa-solid fa-user-clock"></i> Bireysel Özel Ders Eğitmenleri</h3>
            <span class="badge bg-light text-dark border">@ViewBag.ServiceName Uzmanları</span>
        </div>

        @if (trainers == null || trainers.Count == 0)
        {
            <div class="alert alert-light border border-dashed text-center text-muted">
                Bu alanda özel ders veren eğitmen bulunamadı.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var trainer in trainers)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body d-flex align-items-center">
                                <div class="bg-light rounded-circle p-3 me-3 text-success">
                                    <i class="fa-solid fa-chalkboard-user fa-2x"></i>
                                </div>

                                <div class="flex-grow-1">
                                    <h5 class="fw-bold mb-1">@trainer.FullName</h5>
                                    <p class="text-muted small mb-1">
                                        <i class="fa-regular fa-clock"></i> Çalışma Saatleri: @trainer.AvailableFrom.ToString(@"hh\:mm") - @trainer.AvailableTo.ToString(@"hh\:mm")
                                    </p>
                                    <p class="text-muted small mb-0">
                                        <i class="fa-solid fa-star text-warning"></i> Uzmanlık: @trainer.Specialization
                                    </p>
                                </div>

                                <div>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a asp-controller="Appointments" asp-action="Create"
                                           asp-route-serviceId="@ViewBag.ServiceId"
                                           asp-route-trainerId="@trainer.Id"
                                           class="btn btn-success btn-sm fw-bold px-3 shadow-sm">
                                            Randevu Al <i class="fa-solid fa-chevron-right ms-1"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-sm">Giriş</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

</div>