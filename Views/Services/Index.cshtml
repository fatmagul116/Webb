@model IEnumerable<ProjeOdeviWeb_G231210048.Models.Service>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">Hizmetlerimiz</h1>
        <p class="lead text-muted">İlgi alanınıza uygun dersi seçin, fiyatları inceleyin ve hemen yerinizi ayırtın.</p>

        @if (User.IsInRole("Admin"))
        {
            <div class="mt-3">
                <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
                    <i class="fa-solid fa-plus"></i> Yeni Hizmet Tanımla
                </a>
            </div>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0 hover-card">

                    <div class="bg-light text-center py-4 rounded-top position-relative">
                        <i class="fa-solid fa-person-running fa-4x text-primary opacity-50"></i>

                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge bg-success fs-6 shadow">
                                <i class="fa-solid fa-tag"></i> @item.Price ₺ / Seans
                            </span>
                        </div>
                    </div>

                    <div class="card-body text-center">
                        <h3 class="card-title fw-bold">@item.Name</h3>

                        <ul class="list-unstyled mt-3 text-muted small">
                            <li>
                                <i class="fa-regular fa-clock text-warning"></i>
                                Ortalama Süre: <strong>@item.DurationMinutes dk</strong>
                            </li>

                            <li><i class="fa-solid fa-check text-success"></i> Profesyonel Eğitmenler</li>
                        </ul>
                    </div>

                    <div class="card-footer bg-white border-0 pb-4 text-center">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary w-100 rounded-pill fw-bold">
                            <i class="fa-regular fa-calendar-check"></i> Seansları Gör & Randevu Al
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex justify-content-center gap-2 mt-3 border-top pt-2">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.3s;
    }

        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>