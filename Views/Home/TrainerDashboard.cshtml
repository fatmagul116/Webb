@model IEnumerable<ProjeOdeviWeb_G231210048.Models.Appointment>

@{
    ViewData["Title"] = "Eğitmen Paneli";
    var mySessions = ViewBag.MySessions as List<ProjeOdeviWeb_G231210048.Models.Session>;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="fa-solid fa-chalkboard-user"></i> Eğitmen Paneli</h2>
            <p class="text-muted mb-0">Hoşgeldin Hocam, bugünkü programın aşağıdadır.</p>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <span class="badge bg-light text-dark border p-2 fs-6">
                <i class="fa-solid fa-calendar-day text-warning"></i> @DateTime.Today.ToShortDateString()
            </span>
            <a href="/Trainer/CreateSession" class="btn btn-success shadow-sm">
                <i class="fa-solid fa-plus"></i> Yeni Grup Dersi Aç
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card bg-primary text-white shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Bireysel Randevular</h5>
                        <small>Bugün</small>
                    </div>
                    <h1 class="fw-bold m-0">@(Model != null ? Model.Count() : 0)</h1>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card bg-success text-white shadow-sm h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Grup Dersleri</h5>
                        <small>Planlanmış</small>
                    </div>
                    <h1 class="fw-bold m-0">@(mySessions != null ? mySessions.Count() : 0)</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card shadow border-0">
                <div class="card-header bg-dark text-white">
                    <h5 class="m-0"><i class="fa-solid fa-user-clock"></i> Bugünkü Bireysel Randevular</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Saat</th>
                                        <th>Öğrenci</th>
                                        <th>Hizmet</th>
                                        <th>Durum</th>
                                        <th class="text-center">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td><span class="badge bg-warning text-dark">@item.Time.ToString(@"hh\:mm")</span></td>
                                            <td><strong>@item.AppUser?.FullName</strong></td>
                                            <td>@item.Service?.Name</td>
                                            <td>@item.Status</td>
                                            <td class="text-center">
                                                @if (item.Status == "Onay Bekliyor")
                                                {
                                                    <form asp-controller="Appointments" asp-action="Approve" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button class="btn btn-success btn-sm"><i class="fa-solid fa-check"></i></button>
                                                    </form>
                                                    <form asp-controller="Appointments" asp-action="Reject" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@item.Id" />
                                                        <button class="btn btn-outline-danger btn-sm"><i class="fa-solid fa-xmark"></i></button>
                                                    </form>
                                                }
                                                else
                                                {

                                                    <small class="text-muted">Tamamlandı</small>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4"><p class="text-muted mb-0">Randevu yok.</p></div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-12">
            <div class="card shadow border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="m-0"><i class="fa-solid fa-users-rectangle"></i> Yönettiğim Grup Dersleri</h5>
                </div>
                <div class="card-body p-0">
                    @if (mySessions != null && mySessions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="ps-3">Tarih</th>
                                        <th>Ders Adı</th>
                                        <th>Durum</th>
                                        <th>Doluluk</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var session in mySessions)
                                    {
                                        <tr>
                                            <td class="ps-3">
                                                <strong>@session.SessionDate.ToString("dd.MM")</strong>
                                                <small class="text-muted ms-1">@session.SessionDate.ToString("HH:mm")</small>
                                            </td>
                                            <td>@session.ClassName</td>
                                            <td>
                                                @if (session.IsApproved == true)
                                                {
                                                    <span class="badge bg-success">Yayında</span>
                                                }
                                                else if (session.IsApproved == false)
                                                {

                                                    <span class="badge bg-danger">Red</span>
                                                }
                                                else
                                                {

                                                    <span class="badge bg-warning text-dark">Onay Bekliyor</span>
                                                }
                                            </td>
                                            <td>@session.CurrentCount/@session.Quota</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-4"><p class="text-muted">Grup dersi yok.</p></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>