@model IEnumerable<ProjeOdeviWeb_G231210048.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-circle-exclamation"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-calendar-check"></i> Randevu Listesi</h2>

        @if (User.IsInRole("Uye"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Yeni Randevu Al
            </a>
        }
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Tarih</th>
                        <th>Saat</th>
                        <th>Durum</th>
                        <th>Hizmet</th>
                        <th>Eğitmen</th>
                        <th>Üye</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date.ToShortDateString()</td>
                            <td>
                                <span class="badge bg-secondary">@item.Time.ToString(@"hh\:mm")</span>
                            </td>
                            <td>
                                @if (item.Status == "Onaylandı")
                                {
                                    <span class="badge bg-success">Onaylandı</span>
                                }
                                else if (item.Status == "Reddedildi")
                                {

                                    <span class="badge bg-danger">Reddedildi</span>
                                }
                                else
                                {

                                    <span class="badge bg-warning text-dark">@item.Status</span>
                                }
                            </td>
                            <td>@item.Service?.Name</td>
                            <td>@item.Trainer?.FullName</td>
                            <td>@item.AppUser?.FullName</td>

                            <td class="text-center">
                                @if (User.IsInRole("Antrenör"))
                                {
                                    @if (item.Status == "Onay Bekliyor")
                                    {
                                        <form asp-action="Approve" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" title="Onayla">✔</button>
                                        </form>
                                        <form asp-action="Reject" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Reddet">✖</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">İşlem Yapıldı</span>
                                    }
                                }
                                // 2. ÜYE İÇİN (Düzenle/İptal)
                                else if (User.IsInRole("Uye"))
                                {
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">İptal Et</a>
                                    </div>
                                }
                                // 3. ADMIN İÇİN (Sadece Görüntüleme)
                                else if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-light text-dark border">Salt Okunur</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center p-4 text-muted">
                    Listelenecek randevu bulunamadı.
                </div>
            }
        </div>
    </div>
</div>